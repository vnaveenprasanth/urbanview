<div class="container_page">
<%= render 'page' %>
<div class="container_posts">

<% @posts.each do |post| %>
<div class="posts_card">
 <div class="post">
  <% if post.urls.present? %>
    <div class="postImage">
      <%= image_tag(post.urls.first, class: 'image') %>

      <% if post.going_count > 0 && post.tags.include?('events') || post.tags.include?('Events') %>
      <span class="interaction_count"><%= post.going_count %> going 
      <%= image_tag('animated_gif.gif',class: 'animated_gif') %>
      </span>
      <% end %>

      <% if post.donated_count > 0 && post.tags.include?('charity') || post.tags.include?('Charity') %>
      <span class="interaction_count"><%= post.donated_count %> donated
      <%= image_tag('charity_gif.gif',class: 'animated_gif') %>
      </span>
      <% end %>

      <% if post.like_count > 0 %>
      <span class="interaction_count"><%= post.like_count %> liked
      <%= image_tag('like_gif.gif',class: 'animated_gif') %>
      </span>
      <% end %>

    </div>
  <% else %>
    <div class="postImage">
      <%= image_tag('UrbanView.png', class: 'image') %>
    </div>
  <% end %>
  <div class="postTags">
    <% post.tags_array.each do |tag| %>
    <span class="tags"><%= tag %></span>
    <% end %>
  </div>
  <div class="postTitle">
    <p><%= post.title%> 
    <span class="postDescriptionlink"> 
    </span></p>
  </div>
   <div class="postDescription">
    <p><%= truncate(post.description, length: 70, separator: ' ') %> 
    <span class="postDescriptionlink">
    <%= link_to '...Read more!', post_path(post) %> 
    <%= post.event_status %>
    </span></p>
  </div>
  <div class="postUser">
    <span class="postUser_user">
      <span>
        <% if post.user.avatar.attached? %>
              <%= cl_image_tag post.user.avatar.key, class:'postAvatar' %>
        <% end %>
      </span>
      <span>
          &nbsp;@<%= post.user.username %>
      </span>
      &nbsp;
      &middot;
      &nbsp;
      <span>
          <%= post.created_at.strftime('%d %b %y') %>
      </span>
      </span>
      <span>
      <button class="index-share-button" data-title="<%= post.title %>" data-text="<%= post.description %>" data-url="<%= post_url(post) %>">
        <%= image_tag('index_share.png', alt: 'Share Post') %>
      </button>
      </span>
   

  </div>

 </div>
</div>
<% end %>

</div>
</div>


